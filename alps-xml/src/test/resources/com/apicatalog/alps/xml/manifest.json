{
    "description": "ALPS test suite to test the ability of ALPS parser to process ALSP+XML",
    "sequence": [    
        {
           "@id"    : "#t001",
           "@type"  : ["#PositiveEvaluationTest"],
            "name"  : "Sample Works",
            "input" : "t001-in.xml",
            "expected" : "t001-out.xml"
        },
        {
           "@id"    : "#t002",
           "@type"  : ["#PositiveEvaluationTest"],
            "name"  : "Contact Profile",
            "input" : "t002-in.xml",
            "expected" : "t002-out.xml"
        },
        {
           "@id"    : "#t003",
           "@type"  : ["#PositiveEvaluationTest"],
            "name"  : "HTML documentation with tags",
            "input" : "t003-in.xml",
            "expected" : "t003-out.xml"
        },        
        {
           "@id"    : "#nt001",
           "@type"  : ["#NegativeEvaluationTest"],
            "name"  : "Descriptor must have an id",
            "input" : "nt001-in.xml",
            "expectedError" : "ID_REQUIRED",
            "expectedPath" : "/alps/descriptor[position()=1]"
        },
        {
           "@id"    : "#nt002",
           "@type"  : ["#NegativeEvaluationTest"],
            "name"  : "Invalid document",
            "input" : "nt002-in.xml",
            "expectedError" : "INVALID_DOCUMENT"
        },
        {
           "@id"    : "#nt003",
           "@type"  : ["#NegativeEvaluationTest"],
            "name"  : "Descriptor Id is not URI",
            "input" : "nt003-in.xml",
            "expectedError" : "MALFORMED_URI",
            "expectedPath" : "/alps/descriptor[position()=2]"
        },
        {
           "@id"    : "#nt004",
           "@type"  : ["#NegativeEvaluationTest"],
            "name"  : "Malformed XML",
            "input" : "nt004-in.xml",
            "expectedError" : "PARSER_ERROR",
            "expectedRow": 1,
            "expectedColumn": 1
        },
        {
           "@id"    : "#nt005",
           "@type"  : ["#NegativeEvaluationTest"],
            "name"  : "Malformed ALPS+XML",
            "input" : "nt005-in.xml",
            "expectedError" : "PARSER_ERROR",
            "expectedRow": 1,
            "expectedColumn": 1            
        }        
        
    ]
}